<?xml version="1.0" encoding="utf-8"?>
<!-- 圆角退出按钮效果 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中未up时 -->
    <item android:state_pressed="true"><shape>

            <!--
	        	颜色渐变
	        	startColor:开始颜色
	        	endColor:结束颜色
	        	angle:渐变方向 
            -->
            <gradient android:angle="270" android:centerColor="#2B2B2B" android:endColor="#2B2B2B" android:startColor="#262626" />
        </shape></item>

    <!-- 焦点 -->
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:centerColor="#2B2B2B" android:endColor="#2B2B2B" android:startColor="#262626" />
        </shape></item>

    <!-- 无焦点 -->
    <item><shape>
            <gradient android:angle="270" android:centerColor="#2B2B2B" android:endColor="#2B2B2B" android:startColor="#262626" />
        </shape></item>

</selector>